version: '3.3'
services:
  plex:
    container_name: plex
    image: plexinc/pms-docker
    ports:
      - "32400"
    restart: unless-stopped
    environment:
      - TZ=${TIMEZONE}
      - PLEX_CLAIM=${CLAIM_TOKEN}
      - PLEX_HOME=${PLEX_HOME}
    network_mode: host
    volumes:
      - ${PLEX_HOME}/config:/config
      - ${PLEX_HOME}/transcode:/transcode
      - ${PLEX_HOME}/data:/data
